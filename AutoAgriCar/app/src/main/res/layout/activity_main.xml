<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityAfterLogin"
    android:id="@+id/relativeLayout">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="beginning"
        android:paddingTop="16dp">

        <com.example.kai.mulitactivityapp.ManualControlView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:id="@+id/manualView"
            android:visibility="gone"
            />

        <com.example.kai.mulitactivityapp.PathDrawView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:id="@+id/canvas"
            android:visibility="visible"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>
        <!--<TextView
            android:maxLines = "1000"
            android:scrollbars = "vertical"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:text="Walk 10 \n Rotate 90deg \nWalk 10 \n Rotate 90deg \nWalk 10 \n Rotate 90deg \nWalk 10 \n Rotate 90deg"
            android:id="@+id/text"
            android:focusableInTouchMode="true" /> -->

<LinearLayout
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:measureWithLargestChild="true"
    tools:ignore="ExtraText">
        <LinearLayout android:id="@+id/leftSpacer"
            android:layout_weight="0.25"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" />

        <View
            android:layout_height="fill_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_width="2px"
            android:background="#90909090"/>

        <Button

            android:id="@+id/send"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Send"
            android:maxLines="2"
            android:filterTouchesWhenObscured="true"
            style="?android:attr/buttonBarButtonStyle"

             />

        <View
            android:layout_height="fill_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_width="2px"
            android:background="#90909090"/>

        <Button

            android:id="@+id/SendSavedPathButton"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Send Demo"
            android:onClick="onClick"
            android:nestedScrollingEnabled="true"
            android:maxLines="2"
            android:layout_gravity="right"
            style="?android:attr/buttonBarButtonStyle"

        />
    <Button

        android:id="@+id/drawModeButton"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Path Mode"
        android:onClick="onClick"
        android:nestedScrollingEnabled="true"
        android:maxLines="2"
        android:layout_gravity="right"
        style="?android:attr/buttonBarButtonStyle"

        />
    <Button

        android:id="@+id/resetButton"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:onClick="onClick"
        android:nestedScrollingEnabled="true"
        android:maxLines="2"
        android:layout_gravity="right"
        style="?android:attr/buttonBarButtonStyle"

        />


    <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting..."
            android:id="@+id/data"
            android:visibility="gone"/> -->



        <LinearLayout android:id="@+id/rightSpacer"
            android:layout_width="0dip"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" />



</LinearLayout>
    </LinearLayout>

  </RelativeLayout>


